#!/bin/sh

# cross-platform substitute for readlink -f
realpath() {
  OURPWD="$PWD"
  cd "$(dirname "$1")"
  LINK="$(readlink "$(basename "$1")")"
  while [ "$LINK" ]; do
    cd "$(dirname "$LINK")"
    LINK="$(readlink "$(basename "$1")")"
  done
  REALPATH="$PWD/$(basename "$1")"
  cd "$OURPWD"
  echo "$REALPATH"
}

basedir="$(dirname "$(realpath "$0")")"

command="java -jar '${basedir}/lib/rabix-engine-rest.jar' --configuration-dir '${basedir}/config'"

eval $command "$@"
